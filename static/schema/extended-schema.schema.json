{
  "$schema" : "http://standardhealthrecord.org/schemas/shr/extended-schema.schema.json",
  "id": "http://standardhealthrecord.org/schemas/shr/extended-schema.schema.json",
  "description": "Extended schema for SHR definitions",
  "anyOf": [
    {
      "properties": {
        "concepts": {
          "type": "array",
          "items": {
            "type": "#/definitions/concept"
          }
        },
        "concept": {
          "type": "object",
          "properties": {
            "system": {"type": "string"},
            "version": {"type": "string"},
            "code": {"type": "string"},
            "display": {"type": "string"},
            "label": {"type": "string"}
          },
          "required": ["code"],
          "additionalProperties": false
        },
        "descendingFrom": {
          "type": "#/definitions/concept"
        },
        "valueSet": {
          "type": "string",
          "format": "uri"
        },
        "entry": {
          "type": "boolean"
        }
      }
    },
    {
        "$ref": "http://json-schema.org/draft-04/schema#"
    }
  ]
}
